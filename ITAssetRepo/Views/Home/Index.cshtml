@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <title>Home Page</title>
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .btn-custom {
            width: 200px;
            margin: 10px;
            transition: all 0.3s ease;
        }
        .btn-custom:hover {
            transform: scale(1.1);
        }
        .container-custom {
            background: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .title {
            font-size: 2rem;
            margin-bottom: 20px;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container-custom">
        <div class="title">Welcome to IT Asset Management</div>
        <a class="btn btn-primary btn-custom" href="/Asset_list/Index" role="button">Asset List</a>
        <a class="btn btn-secondary btn-custom" asp-area="Identity" asp-page="/Account/Register">Add New User</a>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
