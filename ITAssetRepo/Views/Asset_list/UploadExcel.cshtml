@* Display notification messages *@
@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    var alertType = ViewBag.Message == "Success" ? "success" : "warning";
    var alertMessage = ViewBag.Message == "Success" ? "All records inserted successfully" : "File is empty";
    <div class="alert alert-@alertType" role="alert">
        @alertMessage
    </div>
}

@* File upload form *@
<form method="post" enctype="multipart/form-data" asp-controller="Asset_list" asp-action="UploadExcel">
    <div class="container">
        <div class="row mb-3">
            <label for="fileUpload" class="form-label">Select Excel File</label>
            <input type="file" id="fileUpload" name="file" class="form-control" />
        </div>

        <div class="row">
            <div class="col text-center">
                <button type="submit" class="btn btn-dark">Upload Excel File</button>
                <a class="btn btn-primary ms-2" href="/Asset_list/Index" role="button">Back</a>
            </div>
        </div>
    </div>
</form>
