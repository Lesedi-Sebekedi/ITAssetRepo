@model ITAssetRepo.Models.Asset_list

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center mb-4">Asset Details</h1>

<div class="container">
    <hr />
    <dl class="row">
        @foreach (var property in new[]
        {
        new { Name = "Description", Value = Model.Description },
        new { Name = "Category", Value = Model.Catergory },
        new { Name = "Acquisition Date", Value = Model.Acq_Date.ToShortDateString() },
        new { Name = "Location", Value = Model.Location },
        new { Name = "Label", Value = Model.Label },
        new { Name = "Custodian", Value = Model.Custodian },
        new { Name = "Condition", Value = Model.Condition },
        new { Name = "PO Number", Value = Model.PO_Number },
        new { Name = "Model", Value = Model.Model },
        new { Name = "Serial Number", Value = Model.Serial_Number },
        new { Name = "Asset Cost (ZAR)", Value = Model.Asset_Cost.ToString("C", new System.Globalization.CultureInfo("en-ZA")) }
        })
        {
            <dt class="col-sm-3">@property.Name</dt>
            <dd class="col-sm-9">@property.Value</dd>
        }
    </dl>

    <!-- Display Uploaded Files -->
    @if (Model.TechnicalInspectionFile != null)
    {
        <div class="mb-3">
            <strong>Technical Inspection Report:</strong>
            <a href="@Url.Content(Model.TechnicalInspectionFilePath)" target="_blank">View File</a>
        </div>
    }

    @if (Model.BitlockerFile != null)
    {
        <div class="mb-3">
            <strong>BitLocker Encryption Key:</strong>
            <a href="@Url.Content(Model.BitlockerFilePath)" target="_blank">View File</a>
        </div>
    }

    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Asset_Number" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
