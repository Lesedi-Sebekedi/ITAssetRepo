@model ITAssetRepo.Models.Asset

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center mb-4">Edit Asset</h1>

<div class="container">
    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="mx-auto" style="max-width: 600px;">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <!-- Hidden Field for Asset Number -->
        <input type="hidden" asp-for="Asset_Number" />

        <!-- Form Groups -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Catergory" class="form-label"></label>
            <input asp-for="Catergory" class="form-control" />
            <span asp-validation-for="Catergory" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Acq_Date" class="form-label"></label>
            <input asp-for="Acq_Date" class="form-control" type="date" />
            <span asp-validation-for="Acq_Date" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Location" class="form-label"></label>
            <input asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Label" class="form-label"></label>
            <input asp-for="Label" class="form-control" />
            <span asp-validation-for="Label" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Custodian" class="form-label"></label>
            <input asp-for="Custodian" class="form-control" />
            <span asp-validation-for="Custodian" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Condition" class="form-label"></label>
            <input asp-for="Condition" class="form-control" />
            <span asp-validation-for="Condition" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PO_Number" class="form-label"></label>
            <input asp-for="PO_Number" class="form-control" />
            <span asp-validation-for="PO_Number" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Model" class="form-label"></label>
            <input asp-for="Model" class="form-control" />
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Serial_Number" class="form-label"></label>
            <input asp-for="Serial_Number" class="form-control" />
            <span asp-validation-for="Serial_Number" class="text-danger"></span>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Asset_Cost" class="form-label">Asset Cost (ZAR)</label>
            <input asp-for="Asset_Cost" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
            <span asp-validation-for="Asset_Cost" class="text-danger"></span>
        </div>

        <!-- File Uploads -->
        <div class="form-group mb-4">
            <label class="form-label">Technical Inspection Report</label>
            <input type="file" name="TechnicalInspectionFile" class="form-control" />
        </div>

        <div class="form-group mb-4">
            <label class="form-label">BitLocker Encryption Key</label>
            <input type="file" name="BitlockerFile" class="form-control" />
        </div>

        <!-- Submit Button -->
        <div class="form-group text-center mb-4">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>

    <!-- Back to List Link -->
    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
